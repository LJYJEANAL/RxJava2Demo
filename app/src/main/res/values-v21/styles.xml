<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
       <!-- <item name="android:windowTranslucentStatus">true</item>-->
        <!-- 允许使用transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="myTheme" parent="android:Theme.Material">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColor">#000000</item>
        <!-- 允许使用transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- 指定进入和退出transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- 指定shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>


    <style name="AppTheme.Button.Transparent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#4DDAFBF5</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Brown" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FF3F383B</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SeachViewActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!--Toolbar标题文字大小-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="collapsed.TitleTextSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>  <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>

    </style>
    <style name="expanded.TitleTextSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
</resources>
