<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="reactnative.ng.smc.rxjava2demo.material_design.MetrialAnimActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/oval"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimarys"></View>

        <View
            android:id="@+id/rect"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimarys"></View>

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rect"
            android:colorControlHighlight="@color/colorPrimarys"
            android:background="?android:attr/selectableItemBackground"
            android:stateListAnimator="@drawable/view_state"
            android:text="有界"
            android:clickable="true"
            android:textColor="?android:textColorPrimary"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn"
            android:colorControlHighlight="@color/colorPrimarys"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@drawable/view_state"
            android:text="无界"
            android:clickable="true"
            android:textColor="?android:textColorPrimary"
          />

        <ImageView
            android:id="@+id/ripple_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_shape"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ripple_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/ripple_color"
            android:clickable="true"
            android:padding="15dp"
            android:text="扩散"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/Ripple_no_mask"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="11dp"
            android:background="@drawable/ripple_color"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Ripple With No Mask"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/Ripple_with_mask"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/Ripple_no_mask"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_with_mask"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Ripple With Mask" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/Ripple_with_mask"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_with_mask_putict"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#000000"
            android:text="用图片作为mask"
            android:id="@+id/textView2" />
    </RelativeLayout>
</ScrollView>